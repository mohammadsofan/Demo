@model Guid
@{
    ViewData["Title"] = "Product - Delete";
    ViewData["HeaderTitle"] = "DeleteProduct";
    ViewData["Controller"] = "Products";

}

<div class="col-12 col-sm-6">
    <div class="card card-danger">
        <div class="card-header">
            <h3 class="card-title">Delete Category</h3>
        </div>
        <div class="card-body">
            <p>Are you sure you want to delete @ViewBag.ProductName product?</p>
        </div>
        <div class="card-footer">
            <div class="content d-flex justify-content-end">

                <form asp-controller="Products" asp-action="DeleteConfirm" asp-route-id="@Model">
                    <div class="form-group">
                        <button class="btn px-2 py-1 btn-danger" type="submit">
                            Delete
                        </button>
                        <a asp-controller="Products" asp-action="Index" asp-route-id="@ViewBag.CategoryId" class="btn px-2 py-1 btn-secondary">
                            Cancel
                        </a>
                    </div>

                </form>

            </div>

        </div>
    </div>
</div>
