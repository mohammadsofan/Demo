@model EditProductViewModel
<input type="hidden" asp-for="Id" />
<input type="hidden" asp-for="CreatedAt" />
<div class="form-group">
    <label asp-for="SelectedSubCategory"></label>
    <select asp-for="SelectedSubCategory" class="form-control" asp-items="@Model.SubCategories"></select>
</div>
<div class="form-group">
    <label asp-for="Name"></label>
    <input asp-for="Name" class="form-control" placeholder="Name..">
    <span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Description"></label>
    <input asp-for="Description" class="form-control" placeholder="Description..">
    <span asp-validation-for="Description" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Price"></label>
    <input asp-for="Price" class="form-control" placeholder="Price..">
    <span asp-validation-for="Price" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Quantity"></label>
    <input asp-for="Quantity" class="form-control" placeholder="Quantity..">
    <span asp-validation-for="Quantity" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Discount"></label>
    <input asp-for="Discount" class="form-control" placeholder="Discount..">
    <span asp-validation-for="Discount" class="text-danger"></span>
    <div class="text-info">Hint:Input range (0.00 - 1.00)</div>
</div>
<div class="custom-control custom-checkbox">
    <input class="custom-control-input" type="checkbox" asp-for="InPublish">
    <label asp-for="InPublish" class="custom-control-label">InPublish</label>
</div>
<div class="card my-1">
    <div class="card-body" id="productColors">
        @{
            var index = 0;
        
        foreach (var pc in Model.ProductColors)
        {
            <div class="productColor">
                <div class="form-group">
                    <label asp-for="ProductColors[index].HexCode">Product Color</label>
                    <input type="hidden" asp-for="ProductColors[index].Id">
                    <input type="hidden" asp-for="ProductColors[index].ProductId"/>
                    <div class="input-group my-colorpicker@(index) colorpicker-element" data-colorpicker-id="2">
                        <input type="text" asp-for="ProductColors[index].HexCode" class="form-control" data-original-title="" title="" fdprocessedid="ax2h67">
                        <div class="input-group-append">
                                <span class="input-group-text"><i class="fas fa-square" style="color:@pc.HexCode"></i></span>
                        </div>
                    </div>
                    <span asp-validation-for="ProductColors[index].HexCode" class="text-danger"></span>
                </div>
               
                <div id="imagesContainer@(index)" class="d-flex justify-content-evenly flex-wrap">
                    @foreach (var image in pc.Images)
                    {
                        <div class="img">
                            <img class="productImage m-2 rounded" src="~/files/images/@(image.Name)" />
                            <a href="javascript:void(0)" data-id="@image.Id" class="delete-image border rounded p-1"><i class="fas fa-times fa-lg text-danger"></i></a>
                        </div>
                    }
                </div>
                <div id="newImagesContainer@(index)" class="d-flex justify-content-evenly flex-wrap">

                </div>
                <div class="d-flex flex-column gap-2 my-2">
                    <div class="custom-file">
                        <input asp-for="ProductColors[index].NewImages" class="custom-file-input" accept=".jpg,.jpeg,.png,.gif" multiple>
                        <label asp-for="ProductColors[index].NewImages" class="custom-file-label">Choose Images</label>
                    </div>
                        <span asp-validation-for="ProductColors[index].NewImages" class="text-danger"></span>

                </div>

        </div>
                index++;
        }
        }
    </div>
</div>
<input type="hidden" asp-for="ImagesToDelete" value="">

