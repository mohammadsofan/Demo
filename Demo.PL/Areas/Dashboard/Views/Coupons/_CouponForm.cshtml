@model CreateCouponViewModel
<div class="form-group">
    <label asp-for="Code"></label>
    <input asp-for="Code" class="form-control" placeholder="Code..">
    <span asp-validation-for="Code" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="SelectedType"></label>
    <select asp-for="SelectedType" class="form-control" asp-items="@Model.Types"></select>
</div>
<div class="form-group">
    <label asp-for="Discount"></label>
    <input asp-for="Discount" class="form-control" placeholder="Discount..">
    <span asp-validation-for="Discount" class="text-danger"></span>
    <div class="text-info">Hint: if percentage, Input range (0.00 - 1.00)</div>
</div>
<div class="form-group">
    <label for="StartDate">Start Date</label>
    <div class="input-group date" id="StartDate" data-target-input="nearest">
        <input asp-for="StartDate" type="text" class="form-control datetimepicker-input" data-target="#StartDate" />
        <div class="input-group-append" data-target="#StartDate" data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
        </div>
    </div>
    <span asp-validation-for="StartDate" class="text-danger"></span>
</div>
<div class="form-group">
    <label for="EndDate">End Date</label>
    <div class="input-group date" id="EndDate" data-target-input="nearest">
        <input asp-for="EndDate" type="text" class="form-control datetimepicker-input" data-target="#EndDate" />
        <div class="input-group-append" data-target="#EndDate" data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
        </div>
    </div>
    <span asp-validation-for="EndDate" class="text-danger"></span>
</div>
<div class="custom-control custom-checkbox">
    <input class="custom-control-input" type="checkbox" asp-for="Status">
    <label asp-for="Status" class="custom-control-label">Active</label>
</div>