@using Demo.DAL.Enums
@using Demo.PL.ViewModels
@model IEnumerable<PreviewCardViewModel>
@{
    ViewData["Title"] = "Slide Preview";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"]</title>
    <meta name="keywords" content="HTML5 Template">
    <meta name="description" content="Molla - Bootstrap eCommerce Template">
    <meta name="author" content="p-themes">
    <!-- Favicon -->
    <link rel="apple-touch-icon" sizes="180x180" href="~/assets/images/icons/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="~/assets/images/icons/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/assets/images/icons/favicon-16x16.png">
    @* <link rel="manifest" href="~/assets/images/icons/site.json"> *@
    <link rel="mask-icon" href="~/assets/images/icons/safari-pinned-tab.svg" color="#666666">
    <link rel="shortcut icon" href="~/assets/images/icons/favicon.ico">
    <meta name="apple-mobile-web-app-title" content="Molla">
    <meta name="application-name" content="Molla">
    <meta name="msapplication-TileColor" content="#cc9966">
    <meta name="msapplication-config" content="~/assets/images/icons/browserconfig.xml">
    <meta name="theme-color" content="#ffffff">
    <link rel="stylesheet" href="~/assets/vendor/line-awesome/line-awesome/line-awesome/css/line-awesome.min.css">
    <!-- Plugins CSS File -->
    <link rel="stylesheet" href="~/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/assets/css/plugins/owl-carousel/owl.carousel.css">
    <!-- Main CSS File -->
    <link rel="stylesheet" href="~/assets/css/style.css">
    <link rel="stylesheet" href="~/assets/css/skins/skin-demo-13.css">
    <link rel="stylesheet" href="~/assets/css/demos/demo-13.css">

</head>
<body>
    <div class="container">
        <div class="card my-4">
            <div class="card-header">
                <div class="card-title">
                    <h1>Preview Cards</h1>
                </div>
            </div>
            <div class="card-body">
                <h2 class="mb-2">SectionA Cards</h2>
                <div class="row">
                    @foreach (var card in Model.Where(c=>c.Type==CardType.SectionA))
                    {
                        @if (card.Order == 1)
                        {
                            <div class="col-sm-6 col-lg-3" style="order:1">
                                <div class="banner banner-overlay">
                                    <a href="#">
                                        <img src="~/files/images/@card.Image" style="height:250px" alt="@card.Image">
                                    </a>

                                    <div class="banner-content">
                                        <h4 class="banner-subtitle text-white"><a href="#">@card.SubTitle</a></h4><!-- End .banner-subtitle -->
                                        <h3 class="banner-title text-white"><a href="#">@card.Title <br> <span class="mx-1">@card.SubLeft</span><span class="mx-1">@card.Price</span><span>@card.SubRight</span></a></h3><!-- End .banner-title -->
                                        <a href="@card.Link" class="banner-link">@card.ButtonText <i class="icon-long-arrow-right"></i></a>
                                    </div><!-- End .banner-content -->
                                </div><!-- End .banner -->
                            </div>

                            <!-- End .col-lg-3 -->
                        }
                        else if (card.Order == 2)
                        {
                            <div class="col-lg-6" style="order:2">
                                <div class="banner banner-overlay">
                                    <a href="#">
                                        <img src="~/files/images/@card.Image" style="height:250px" alt="@card.Image">
                                    </a>

                                    <div class="banner-content">
                                        <h4 class="banner-subtitle text-white"><a href="#">@card.SubTitle</a></h4><!-- End .banner-subtitle -->
                                        <h3 class="banner-title text-white"><a href="#">@card.Title <br> <span class="mx-1">@card.SubLeft</span><span class="mx-1">@card.Price</span><span>@card.SubRight</span></a></h3><!-- End .banner-title -->
                                        <a href="@card.Link" class="banner-link">@card.ButtonText <i class="icon-long-arrow-right"></i></a>
                                    </div><!-- End .banner-content -->
                                </div><!-- End .banner -->
                            </div>

                            <!-- End .col-lg-6 -->
                        }
                        else
                        {
                            <div class="col-sm-6 col-lg-3 order-lg-last">
                                <div class="banner banner-overlay">
                                    <a href="#">
                                        <img src="~/files/images/@card.Image" style="height:250px" alt="@card.Image">
                                    </a>

                                    <div class="banner-content">
                                        <h4 class="banner-subtitle text-white"><a href="#">@card.SubTitle</a></h4><!-- End .banner-subtitle -->
                                        <h3 class="banner-title text-white"><a href="#">@card.Title <br> <span class="mx-1">@card.SubLeft</span><span class="mx-1">@card.Price</span><span>@card.SubRight</span></a></h3><!-- End .banner-title -->
                                        <a href="@card.Link" class="banner-link">@card.ButtonText <i class="icon-long-arrow-right"></i></a>
                                    </div><!-- End .banner-content -->
                                </div><!-- End .banner -->
                            </div>

                            <!-- End .col-lg-3 -->
                        }
                    }
                </div><!-- End .row -->
                <h2 class="mb-2">SectionB Cards</h2>
                <div class="row">
                    @foreach (var card in Model.Where(c => c.Type == CardType.SectionB))
                    {
                        @if (card.Order == 1)
                        {
                            <div class="col-12 col-lg-6" style="order:1">
                                <div class="banner banner-overlay">
                                    <a href="#">
                                        <img src="~/files/images/@card.Image" style="height:250px" alt="@card.Image">
                                    </a>

                                    <div class="banner-content">
                                        <h4 class="banner-subtitle text-white"><a href="#">@card.SubTitle</a></h4><!-- End .banner-subtitle -->
                                        <h3 class="banner-title text-white"><a href="#">@card.Title <br> <span class="mx-1">@card.SubLeft</span><span class="mx-1">@card.Price</span><span>@card.SubRight</span></a></h3><!-- End .banner-title -->
                                        <a href="@card.Link" class="banner-link">@card.ButtonText <i class="icon-long-arrow-right"></i></a>
                                    </div><!-- End .banner-content -->
                                </div><!-- End .banner -->
                            </div>

                            <!-- End .col-lg-3 -->
                        }
                        else if (card.Order == 2)
                        {
                            <div class="col-12 col-lg-6" style="order:2">
                                <div class="banner banner-overlay">
                                    <a href="#">
                                        <img src="~/files/images/@card.Image" style="height:250px" alt="@card.Image">
                                    </a>

                                    <div class="banner-content">
                                        <h4 class="banner-subtitle text-white"><a href="#">@card.SubTitle</a></h4><!-- End .banner-subtitle -->
                                        <h3 class="banner-title text-white"><a href="#">@card.Title <br> <span class="mx-1">@card.SubLeft</span><span class="mx-1">@card.Price</span><span>@card.SubRight</span></a></h3><!-- End .banner-title -->
                                        <a href="@card.Link" class="banner-link">@card.ButtonText <i class="icon-long-arrow-right"></i></a>
                                    </div><!-- End .banner-content -->
                                </div><!-- End .banner -->
                            </div>

                            <!-- End .col-lg-6 -->
                        }
                    }
                </div><!-- End .row -->
            </div>
        </div>
    </div><!-- End .container -->

</body>
<!-- Plugins JS File -->
<script src="~/assets/js/jquery.min.js"></script>
<script src="~/assets/js/owl.carousel.min.js"></script>

<!-- Main JS File -->
<script src="~/assets/js/main.js"></script>

<srcipt>

</srcipt>
</html>