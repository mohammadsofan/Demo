@model CategoryViewModel
@{
    ViewData["Title"] = "Categories - create";
    ViewData["HeaderTitle"] = "CreateCategory";
    ViewData["Controller"] = "Categories";

}
<div class="col-md-6">

    <a asp-controller="Categories" asp-action="Index" class="btn btn-secondary mb-2">
        <i class="fa fa-sm fa-chevron-left"></i>
        Back to list
    </a>
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Create Category</h3>
        </div>
        <form asp-area="Dashboard" asp-controller="Categories" asp-action="Create">
            <div class="card-body">
               <partial name="_CategoryForm" />
            </div>
            <div class="card-footer">
                <div asp-validation-summary="All" class="text-danger"></div>
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </form>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}