@model IEnumerable<CategoryViewModel>
@{
    ViewData["Title"] = "Categories - Show All";
    ViewData["HeaderTitle"] = "Categories";
    ViewData["Controller"] = "Categories";
}

<div class="col-12">
    @if (Model.Any())
    {

        <h1 class="text-primary mb-3">Categories</h1>
        <div class="card p-2">
            <div class="card-header">
                <h3 class="card-title">Categories</h3>
            </div>
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(c => c.Name)</th>
                            <th>@Html.DisplayNameFor(c => c.Description)</th>
                            <th>@Html.DisplayNameFor(c => c.CreatedAt)</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@(item.Description.Length > 50 ? item.Description.Substring(0, 50) + "..." : item.Description)</td>
                                <td>@item.CreatedAt.ToLocalTime()</td>
                                <td>
                                    <a class="btn btn-info btn-sm" asp-controller="Categories" asp-action="Details" asp-route-id="@item.Id">
                                        <i class="fas fa-clipboard">
                                        </i>
                                        Details
                                    </a>
                                     <a class="btn btn-primary btn-sm" asp-controller="Categories" asp-action="Edit" asp-route-id="@item.Id">
                                        <i class="fas fa-edit">
                                        </i>
                                        Edit
                                    </a>
                                    <a class="btn btn-danger btn-sm" asp-controller="Categories" asp-action="Delete" asp-route-id="@item.Id">
                                        <i class="fas fa-trash">
                                        </i>
                                        Delete
                                    </a>
                                   
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info d-block">there is no categories.</div>
    }
</div>

@section Styles {
    <partial name="_DatatablesStyles" />
}
@section Scripts {

    <partial name="_DatatablesScripts" />

}