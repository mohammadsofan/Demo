@model RoleViewModel
@{
    ViewData["Title"] = "CreateRole";
    ViewData["HeaderTitle"] = "CreateRole";

}

    <div class="col-md-6">
    <a asp-controller="Admin" asp-action="Roles" class="btn btn-secondary mb-2">
        <i class="fa fa-sm fa-chevron-left"></i>
        Back to list
    </a>
            <div class="card card-primary">
              <div class="card-header">
                 <h3 class="card-title">Create Role</h3>
              </div>
                <form asp-area="Dashboard" asp-controller="Admin" asp-action="CreateRole">
                        <div class="card-body">
                          <div class="form-group">
                            <label asp-for="Name"></label>
                            <input asp-for="Name" class="form-control" placeholder="Enter role name">
                            <span asp-validation-for="Name" class="text-danger"></span>
                          </div>
                        </div>
                        <div class="card-footer">
                          <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                          <button type="submit" class="btn btn-primary">Create</button>
                        </div>
                </form>
            </div>

    </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}